name: Generate Sitemap

on:
  push:
    branches: [ main ]
  schedule:
    - cron: '0 0 * * *'  # هر روز یکبار اجرا شود (اختیاری)

jobs:
  generate-sitemap:
    runs-on: ubuntu-latest
    permissions:
      contents: write  # اجازه push به مخزن

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Generate Sitemap
        uses: cicirello/generate-sitemap@v1
        with:
          base-url: https://mohamadalikamalvand.github.io
          drop-html-extension: true
          # optional: path-to-sitemap: ./sitemap.xml  # پیش‌فرض همین است

      - name: Commit & Push Sitemap
        run: |
          git config --global user.email "actions@github.com"
          git config --global user.name "GitHub Action"
          git add sitemap.xml
          
          # فقط اگر تغییری وجود داشت commit کنیم
          if git diff --staged --quiet; then
            echo "No changes in sitemap.xml"
            exit 0
          fi
          
          git commit -m "Update sitemap.xml [skip ci]"
          git push origin HEAD:main
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
